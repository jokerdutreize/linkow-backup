{% extends 'base.html.twig' %}

{% block title %}Se connecter - Linkow{% endblock %}

{% block body %}
<section class="vh-100 mt-5" style="background-color: #FFFFFF;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">
  
                  <form method="post" class="py-0">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}
  
                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connectez-vous</h5>
  
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form2Example17">Adresse mail</label>
                        <input type="email" value="{{ last_username }}" name="email" id="form2Example17" class="form-control form-control-lg" />
                    </div>
  
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form2Example27">Mot de passe</label>
                        <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" />
                    </div>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
  
                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg btn-block" type="submit">Se connecter</button>
                    </div>
  
                    <a class="small text-muted" href="#">J'ai oublié mon mot de passe</a>
                    <p class="mb-5 pb-lg-2" style="color: #393f81;">Vous n'avez pas de compte ? <a href="#!"
                        style="color: #393f81;">Inscrivez vous</a></p>
                  </form>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
