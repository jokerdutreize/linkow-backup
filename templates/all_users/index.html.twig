{% extends 'base.html.twig' %}

{% block title %}Tous les utilisateurs{% endblock %}

{% block body %}
<div class="row pb-5 mb-4 utilisateurs">
    {% for user in users  %}
        <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
            <!-- Card-->
            <div class="card shadow-sm border-0 rounded">
            <div class="card-body p-0"><img src="{% if user.illustration %}/uploads/{{ user.illustration }}{% else %}https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp{% endif %}" class="img-fluid d-block mx-auto mb-3">
                <div class="p-4">
                <h5 class="mb-0">{{ user.firstame }} {{ user.lastname }}</h5>
                <p class="small text-muted">{{ user.job }} - {{ user.society }}</p>
                <ul class="social mb-0 list-inline mt-3">
                    <li class="list-inline-item m-0"><a href="{{ user.facelink }}" class="social-link"><i class="fa fa-facebook-f"></i></a></li>
                    <li class="list-inline-item m-0"><a href="{{ user.twitterlink }}" class="social-link"><i class="fa fa-twitter"></i></a></li>
                    <li class="list-inline-item m-0"><a href="{{ user.instalink }}" class="social-link"><i class="fa fa-instagram"></i></a></li>
                    <li class="list-inline-item m-0"><a href="{{ user.linkedlink }}" class="social-link"><i class="fa fa-linkedin"></i></a></li>
                </ul>
                </div>
            </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
